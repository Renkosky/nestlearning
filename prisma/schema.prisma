// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @unique @default(autoincrement())
  email     String
  name      String?
  Project   Project[]
  projectId Int?
}

model Project {
  id          Int      @id @unique @default(autoincrement())
  name        String
  devUrl      String
  description String?
  created_at  DateTime @default(now())
  cover       String?
  uatUrl      String?
  prodUrl     String?
  owner       User[]
  rule        Rule[]
  Report      Report[]
}

model Rule {
  id        Int     @id @unique @default(autoincrement())
  url       String
  method    String
  name      String
  code      String
  projectId Int
  Project   Project @relation(fields: [projectId], references: [id])
}

model Report {
  id         Int      @id @unique
  projectId  Int
  ruleId     Int?
  message    String
  createdAt  DateTime @default(now())
  resolved   Boolean  @default(false)
  name       String
  level      String
  type       String
  url        String
  stack      Json
  breadcrumb Json
  Project    Project  @relation(fields: [projectId], references: [id])
}
